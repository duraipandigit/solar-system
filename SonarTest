pipeline {
    agent any 
    
    tools{
        jdk 'jdk11'
        maven 'mvn3911'
    }
    
    environment {
        SCANNER_HOME=tool 'sonarqube_test'
    }
    
    stages{
    
        stage("Git Checkout"){
            steps{
                git branch: 'main', url: 'https://github.com/duraipandigit/solar-system.git'
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building the application'
                sh 'mvn clean install -DskipTests'
            }
        }

        stage('Unit Test') {
            steps {
                echo 'Running unit tests'
                sh 'mvn test'
            }
            
        }

        stage('Code Analysis') {
            steps {
                echo 'Running SonarQube analysis'
                withSonarQubeEnv('sonarqube-server') {
                    sh 'mvn sonar:sonar -Dsonar.projectKey=SonarTokenNew'
                }
            }
        }

        stage('Quality Gate') {
            steps {
                echo 'Checking SonarQube quality gate status'
                timeout(time: 2, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }
    }

}

